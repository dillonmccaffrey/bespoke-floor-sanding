<button
  class="theme-toggle relative w-14 h-7 rounded-full bg-background-lighter border border-text-muted/30 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/50"
  aria-label="Toggle theme"
  role="switch"
  aria-checked="false"
  type="button"
>
  <!-- Track icons -->
  <span class="absolute inset-0 flex items-center justify-between px-1.5 pointer-events-none">
    <!-- Sun icon (left side) -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-primary" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
    </svg>
    <!-- Moon icon (right side) -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-text-muted" viewBox="0 0 20 20" fill="currentColor">
      <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
    </svg>
  </span>
  <!-- Toggle knob -->
  <span class="toggle-knob absolute top-0.5 left-0.5 w-6 h-6 rounded-full bg-text shadow-md transition-transform duration-200"></span>
</button>

<script>
  // Theme toggle functionality - works with multiple toggles on page
  function initThemeToggle() {
    const html = document.documentElement;
    const toggles = document.querySelectorAll('.theme-toggle');
    
    function getSystemTheme(): string {
      return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
    }

    function getStoredTheme(): string | null {
      return localStorage.getItem('theme');
    }

    function updateKnobs(theme: string) {
      toggles.forEach(toggle => {
        const knob = toggle.querySelector('.toggle-knob');
        if (theme === 'light') {
          knob?.classList.remove('translate-x-7');
          toggle.setAttribute('aria-checked', 'true');
        } else {
          knob?.classList.add('translate-x-7');
          toggle.setAttribute('aria-checked', 'false');
        }
      });
    }

    function setTheme(theme: string) {
      if (theme === 'light') {
        html.classList.add('light');
        html.classList.remove('dark');
      } else {
        html.classList.add('dark');
        html.classList.remove('light');
      }
      localStorage.setItem('theme', theme);
      updateKnobs(theme);
    }

    // Initialize theme
    const storedTheme = getStoredTheme();
    const initialTheme = storedTheme || getSystemTheme();
    setTheme(initialTheme);

    // Add click handlers to all toggles
    toggles.forEach(toggle => {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        const currentTheme = html.classList.contains('light') ? 'light' : 'dark';
        setTheme(currentTheme === 'light' ? 'dark' : 'light');
      });
      
      // Also handle touch events for mobile
      toggle.addEventListener('touchend', (e) => {
        e.preventDefault();
        const currentTheme = html.classList.contains('light') ? 'light' : 'dark';
        setTheme(currentTheme === 'light' ? 'dark' : 'light');
      });
    });

    // Listen for system theme changes
    window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
      if (!getStoredTheme()) {
        setTheme(e.matches ? 'light' : 'dark');
      }
    });
  }

  // Run on initial load
  initThemeToggle();
  
  // Re-run on page navigation (for Astro View Transitions)
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
