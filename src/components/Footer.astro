---
import { getGeneralSettings, getContactSettings, formatPhoneHref, formatEmailHref } from '../lib/content';

const settings = getGeneralSettings();
const contactSettings = getContactSettings();

const phone = settings.phone;
const phoneHref = formatPhoneHref(phone);
const email = settings.email;
const emailHref = formatEmailHref(email);
const businessName = settings.businessName;

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' },
];

const locationPages = [
  { href: '/floor-sanding-dublin', label: 'Dublin' },
  { href: '/floor-sanding-monaghan', label: 'Monaghan' },
  { href: '/floor-sanding-cavan', label: 'Cavan' },
  { href: '/floor-sanding-meath', label: 'Meath' },
  { href: '/floor-sanding-midlands', label: 'Midlands' },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-background-light border-t border-background-lighter">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="text-xl font-bold text-primary mb-4 block">
          {businessName}
        </a>
        <p class="text-text-muted text-sm mb-4">
          Premium floor sanding and restoration services across Ireland.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-text font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-text-muted hover:text-primary transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div>
        <h3 class="text-text font-semibold mb-4">Service Areas</h3>
        <ul class="space-y-2">
          {locationPages.map((location) => (
            <li>
              <a href={location.href} class="text-text-muted hover:text-primary transition-colors text-sm">
                {location.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h3 class="text-text font-semibold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li>
            <a href={phoneHref} class="flex items-center gap-2 text-primary hover:text-primary-light transition-colors font-semibold">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
              <span>{phone}</span>
            </a>
          </li>
          <li>
            <a href={emailHref} class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              <span>{email}</span>
            </a>
          </li>
        </ul>

        <!-- Social Links -->
        <div class="flex items-center gap-3 mt-4">
          <a
            href="https://www.facebook.com/people/Bespoke-Floor-Sanding-Co/61573954506147/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-muted hover:text-primary transition-colors"
            aria-label="Facebook"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a
            href="https://www.instagram.com/bespoke_floor_sanding/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-muted hover:text-primary transition-colors"
            aria-label="Instagram"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>

        <!-- CTA Button -->
        <a
          href={phoneHref}
          class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-5 py-2.5 rounded-lg transition-all mt-4 text-sm"
        >
          <span>Get Free Quote</span>
        </a>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-background-lighter mt-8 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-text-muted text-sm">
        Â© {currentYear} {businessName}. All rights reserved.
      </p>
      <div class="flex items-center gap-4 text-text-muted text-sm">
        <a href="/privacy-policy" class="hover:text-primary transition-colors">Privacy Policy</a>
        <span class="hidden sm:inline">|</span>
        <span class="hidden sm:inline">Serving Dublin, Midlands & North Ireland</span>
      </div>
    </div>
  </div>
</footer>
