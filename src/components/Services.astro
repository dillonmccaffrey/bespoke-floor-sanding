<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">Our Services</h2>
      <p class="text-lg text-text-muted max-w-2xl mx-auto">
        Professional floor sanding and restoration services for residential and commercial properties.
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {services.map((service) => (
        <div class="group bg-background-light hover:bg-background-lighter border border-background-lighter rounded-xl p-6 transition-all hover:border-primary/30">
          <!-- Icon -->
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[service.icon]} />
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-semibold text-text mb-2">{service.title}</h3>
          <p class="text-text-muted text-sm leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center">
      <a
        href={phoneHref}
        class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-8 py-4 rounded-lg text-lg transition-all hover:scale-105"
