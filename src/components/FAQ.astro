---
interface FAQItem {
  question: string;
  answer: string;
}

const faqs: FAQItem[] = [
  {
    question: "How long does floor sanding take?",
    answer: "Most residential projects take 2-4 days depending on the floor size and condition. Larger commercial spaces may take longer. We'll provide an accurate timeline during your free consultation."
  },
  {
    question: "Is floor sanding messy?",
    answer: "We use modern dust-free sanding equipment that captures up to 99% of dust. Your home stays clean and we protect all furniture and fixtures throughout the process."
  },
  {
    question: "What areas do you cover?",
    answer: "We cover Dublin, Monaghan, Cavan, Meath, Louth, the Midlands, and Northern Ireland. No matter where you are in our service area, we provide the same high-quality workmanship."
  },
  {
    question: "How much does floor sanding cost?",
    answer: "Prices vary based on floor size, condition, and finish type. We offer free, no-obligation quotes. Call us on 087 402 7101 to discuss your project and get a competitive rate."
  },
  {
    question: "Can you sand engineered wood floors?",
    answer: "Yes, we can sand most engineered wood floors, provided the wear layer is thick enough. We'll assess your floor during our consultation and advise on the best approach."
  },
  {
    question: "How soon can I walk on the floor after sanding?",
    answer: "You can typically walk on the floor in socks after 24 hours. Full curing takes 7-10 days, during which you should avoid heavy furniture and rugs."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<section class="px-6 py-20 bg-background-light">
  <div class="mx-auto max-w-4xl">
    <h2 class="mb-12 text-center text-3xl font-bold md:text-4xl">
      Frequently Asked <span class="text-primary">Questions</span>
    </h2>
    <div class="space-y-4">
      {faqs.map((faq) => (
        <details class="group rounded-lg bg-background p-6 border border-background-light hover:border-primary/30 transition-colors">
          <summary class="cursor-pointer text-lg font-semibold flex justify-between items-center">
            {faq.question}
            <span class="text-primary transition-transform group-open:rotate-180">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </summary>
          <p class="mt-4 text-text-muted leading-relaxed">{faq.answer}</p>
        </details>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-text-muted mb-4">Have more questions? We're here to help.</p>
      <a 
        href="tel:+353874027101" 
        class="inline-flex items-center gap-2 bg-primary text-background px-6 py-3 rounded font-semibold hover:bg-primary/90 transition"
        data-umami-event="faq-cta-call"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call 087 402 7101
      </a>
    </div>
  </div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
