---
import { getTestimonials, getGeneralSettings, formatPhoneHref } from '../lib/content';

const settings = getGeneralSettings();
const phoneHref = formatPhoneHref(settings.phone);
const testimonials = getTestimonials();
---

<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">What Our Customers Say</h2>
      <p class="text-lg text-text-muted max-w-2xl mx-auto">
        Don't just take our word for it â€” hear from our satisfied customers across Ireland.
      </p>
    </div>
    
    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {testimonials.map((testimonial) => (
        <div class="bg-background-light border border-background-lighter rounded-xl p-6 hover:border-primary/30 transition-all">
          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          
          <!-- Quote -->
          <blockquote class="text-text mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>
          
          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
              <span class="text-primary font-semibold">{testimonial.name.charAt(0)}</span>
            </div>
            <div>
              <p class="font-semibold text-text">{testimonial.name}</p>
              <p class="text-sm text-text-muted">{testimonial.location}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center">
      <p class="text-text-muted mb-4">Join our happy customers</p>
      <a
        href={phoneHref}
        class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-8 py-4 rounded-lg text-lg transition-all hover:scale-105"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        <span>Call Now</span>
      </a>
    </div>
  </div>
</section>
