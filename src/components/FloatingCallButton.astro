<a
  id="floating-call-btn"
  href="/contact"
  data-phone="tel:+353874027101"
  class="md:hidden fixed bottom-6 right-6 z-50 w-14 h-14 bg-cta hover:bg-cta-hover rounded-full flex items-center justify-center shadow-lg shadow-primary/30 transition-all hover:scale-110"
  aria-label="Call us now"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-background" viewBox="0 0 20 20" fill="currentColor">
    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
  </svg>
</a>

<script>
  const btn = document.getElementById('floating-call-btn');
  
  function isMobile() {
    return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
  }

  btn?.addEventListener('click', (e) => {
    if (isMobile()) {
      e.preventDefault();
      const phoneNumber = btn.getAttribute('data-phone');
      if (phoneNumber) {
        window.location.href = phoneNumber;
      }
    }
    // On desktop (though hidden), go to contact page
  });
</script>
