---
const phone = '+353 87 402 7101';
const phoneHref = 'tel:+353874027101';

const areas = [
  'Dublin City',
  'South Dublin',
  'North Dublin',
  'Monaghan',
  'Cavan',
  'Meath',
  'Louth',
  'Midlands',
  'North Ireland',
];
---

<section class="py-20 bg-background-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
          Where We Work
        </h2>
        <p class="text-lg text-text-muted mb-8">
          We provide professional floor sanding services across Dublin, Midlands, and Northern Ireland. 
          If you're unsure whether we cover your location, just give us a call â€” we're happy to help!
        </p>
        
        <!-- Areas Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 mb-8">
          {areas.map((area) => (
            <div class="flex items-center gap-2 text-text-muted">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{area}</span>
            </div>
          ))}
        </div>
        
        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href={phoneHref}
            class="inline-flex items-center justify-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-6 py-3 rounded-lg transition-all hover:scale-105"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <span>Call: {phone}</span>
          </a>
        </div>
      </div>
      
      <!-- Map Placeholder -->
      <div class="relative">
        <div class="aspect-square bg-background rounded-xl border border-background-lighter overflow-hidden">
          <!-- Placeholder map visualization -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-8">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-primary/50 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="text-primary font-semibold text-xl mb-2">Dublin, Midlands & North Ireland</p>
              <p class="text-text-muted">Covering all areas shown above</p>
            </div>
          </div>
          
          <!-- Decorative dots representing service areas -->
          <div class="absolute inset-0 opacity-20">
            <div class="absolute top-1/4 left-1/3 w-3 h-3 bg-primary rounded-full animate-pulse"></div>
            <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-primary rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
            <div class="absolute bottom-1/3 left-1/4 w-2 h-2 bg-primary rounded-full animate-pulse" style="animation-delay: 1s;"></div>
            <div class="absolute top-1/2 right-1/4 w-3 h-3 bg-primary rounded-full animate-pulse" style="animation-delay: 0.3s;"></div>
            <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-primary rounded-full animate-pulse" style="animation-delay: 0.8s;"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
