---
import { getGeneralSettings, getContactSettings, formatPhoneHref } from '../lib/content';

const settings = getGeneralSettings();
const contactSettings = getContactSettings();

const phone = settings.phone;
const phoneHref = formatPhoneHref(phone);
const areas = contactSettings.serviceAreas;
---

<section class="py-20 bg-background-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
          Where We Work
        </h2>
        <p class="text-lg text-text-muted mb-8">
          We provide professional floor sanding services across Dublin, Midlands, and Northern Ireland. 
          If you're unsure whether we cover your location, just give us a call â€” we're happy to help!
        </p>
        
        <!-- Areas Grid with Links -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 mb-8">
          <a href="/floor-sanding-dublin" class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Dublin</span>
          </a>
          <a href="/floor-sanding-monaghan" class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Monaghan</span>
          </a>
          <a href="/floor-sanding-cavan" class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Cavan</span>
          </a>
          <a href="/floor-sanding-meath" class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Meath</span>
          </a>
          <a href="/floor-sanding-midlands" class="flex items-center gap-2 text-text-muted hover:text-primary transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Midlands</span>
          </a>
          <div class="flex items-center gap-2 text-text-muted">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Northern Ireland</span>
          </div>
        </div>
        
        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href={phoneHref}
            class="inline-flex items-center justify-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-6 py-3 rounded-lg transition-all hover:scale-105"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <span>Call: {phone}</span>
          </a>
        </div>
      </div>
      
      <!-- Map Image -->
      <div class="relative">
        <div class="aspect-square rounded-xl border border-background-lighter overflow-hidden">
          <img src="/images/ireland-service-map.png" alt="Map of Ireland showing service areas: Dublin, Monaghan, Cavan, Meath, Louth, and Midlands" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </div>
</section>
