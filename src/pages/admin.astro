---
export const prerender = true;
---
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <title>Content Manager | Bespoke Floor Sanding</title>
    <style>
      /* Custom styling for Decap CMS to match theme */
      :root {
        --primary: #C4A052;
        --background: #1A1A1A;
        --background-light: #2A2A2A;
        --text: #F5F5F5;
      }
      
      body {
        background-color: var(--background) !important;
      }
      
      /* Login page styling */
      [class*="LoginPage"] {
        background-color: var(--background) !important;
      }
      
      [class*="LoginButton"] {
        background-color: var(--primary) !important;
        color: var(--background) !important;
      }
      
      /* Header */
      [class*="AppHeader"] {
        background-color: var(--background-light) !important;
      }
      
      /* Sidebar */
      [class*="Sidebar"] {
        background-color: var(--background-light) !important;
      }
      
      /* Main content area */
      [class*="AppMainContainer"] {
        background-color: var(--background) !important;
      }
      
      /* Cards */
      [class*="Card"] {
        background-color: var(--background-light) !important;
        border-color: #3A3A3A !important;
      }
      
      /* Buttons */
      [class*="Button"]:not([class*="DeleteButton"]) {
        background-color: var(--primary) !important;
        color: var(--background) !important;
      }
      
      /* Text */
      [class*="Label"], [class*="Title"], h1, h2, h3, p, span, label {
        color: var(--text) !important;
      }
      
      /* Inputs */
      input, textarea, select {
        background-color: var(--background) !important;
        border-color: #3A3A3A !important;
        color: var(--text) !important;
      }
    </style>
  </head>
  <body>
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
    <script>
      // Decap CMS doesn't require login with local_backend
      // If you see a login screen, make sure npx decap-server is running
    </script>
  </body>
</html>
