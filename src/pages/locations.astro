---
import Layout from '../layouts/Layout.astro';

const locations = [
  { href: '/floor-sanding-dublin', name: 'Dublin', areas: 'Dublin City, DÃºn Laoghaire, Swords, Tallaght' },
  { href: '/floor-sanding-monaghan', name: 'Monaghan', areas: 'Monaghan Town, Castleblayney, Carrickmacross, Clones' },
  { href: '/floor-sanding-cavan', name: 'Cavan', areas: 'Cavan Town, Virginia, Bailieborough, Kingscourt' },
  { href: '/floor-sanding-meath', name: 'Meath', areas: 'Navan, Trim, Ashbourne, Dunshaughlin' },
  { href: '/floor-sanding-midlands', name: 'Midlands', areas: 'Westmeath, Longford, Offaly, Laois' },
];

const phone = '+353 87 402 7101';
const phoneHref = 'tel:+353874027101';
---

<Layout title="Floor Sanding Locations | Areas We Serve" description="Professional floor sanding services across Dublin, Monaghan, Cavan, Meath and the Midlands. Find your local area and get a free quote.">
  <section class="py-20 bg-gradient-to-b from-background to-background-light">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-text mb-6">
        Areas We <span class="text-primary">Serve</span>
      </h1>
      <p class="text-lg text-text-muted max-w-2xl mx-auto mb-12">
        Bespoke Floor Sanding provides professional floor restoration services across Ireland.
        Select your area below to learn more about our local services.
      </p>
    </div>
  </section>

  <section class="py-16 bg-background">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {locations.map((location) => (
          <a
            href={location.href}
            class="group block bg-background-light border border-background-lighter rounded-xl p-6 hover:border-primary/50 transition-all hover:shadow-lg"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
              </div>
              <h2 class="text-xl font-bold text-text group-hover:text-primary transition-colors">
                {location.name}
              </h2>
            </div>
            <p class="text-text-muted text-sm mb-4">
              {location.areas}
            </p>
            <span class="inline-flex items-center gap-1 text-primary text-sm font-medium">
              View services
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-text-muted mb-4">Don't see your area? We may still be able to help.</p>
        <a
          href={phoneHref}
          class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-6 py-3 rounded-lg transition-all"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
          </svg>
          <span>Call {phone}</span>
        </a>
      </div>
    </div>
  </section>
</Layout>
