---
import Layout from '../layouts/Layout.astro';

const phone = '+353 87 402 7101';
const phoneHref = 'tel:+353874027101';

const services = [
  {
    title: 'Floor Sanding',
    description: 'Our professional floor sanding service removes years of wear, scratches, and imperfections, revealing the natural beauty of your wooden floors. Using state-of-the-art dust-free equipment, we minimize mess and disruption.',
    features: ['Dust-free sanding technology', 'Suitable for all wood types', 'Removes scratches and stains', 'Prepares surface for finishing'],
    image: '/images/service-floor-sanding.jpg',
  },
  {
    title: 'Floor Restoration',
    description: 'We bring even the most worn and damaged floors back to life with our comprehensive restoration services. From fixing boards to addressing water damage, we have the expertise to restore your floor.',
    features: ['Board replacement', 'Gap filling', 'Water damage repair', 'Structural repairs'],
    image: '/images/service-restoration.jpg',
  },
  {
    title: 'Refinishing',
    description: 'Choose from a range of high-quality finishes including oil, lacquer, and wax to protect your floors for years to come. We offer various sheen levels and can color-match to your preferences.',
    features: ['Oil finishes', 'Lacquer finishes', 'Wax finishes', 'Custom staining'],
    image: '/images/service-refinishing.jpg',
  },
  {
    title: 'Commercial Services',
    description: 'Minimize disruption to your business with our efficient commercial floor sanding services. We work outside business hours and can handle large-scale projects.',
    features: ['Out-of-hours work available', 'Fast turnaround', 'Large area specialists', 'Minimal business disruption'],
    image: '/images/service-commercial.jpg',
  },
];
---

<Layout title="Our Services" description="Professional floor sanding, restoration, and refinishing services. Bespoke Floor Sanding Co. serves Dublin, Monaghan, Cavan, and Midlands Ireland. Call +353 87 402 7101.">
  <!-- Hero -->
  <section class="py-20 bg-gradient-to-b from-background to-background-light">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-text mb-6">Our Services</h1>
      <p class="text-lg text-text-muted max-w-2xl mx-auto">
        From sanding and restoration to refinishing, we offer a complete range of professional floor services.
      </p>
    </div>
  </section>
  
  <!-- Services -->
  <section class="py-16 bg-background">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {services.map((service, index) => (
          <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <h2 class="text-3xl font-bold text-text mb-4">{service.title}</h2>
              <p class="text-text-muted mb-6 leading-relaxed">{service.description}</p>
              <ul class="space-y-3 mb-8">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-3 text-text-muted">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <a
                href={phoneHref}
                class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-6 py-3 rounded-lg transition-all hover:scale-105"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                <span>Get a Quote for {service.title}</span>
              </a>
            </div>
            <div class={`rounded-xl aspect-video overflow-hidden border border-background-lighter ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 bg-background-light">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-text mb-4">Ready to Get Started?</h2>
      <p class="text-text-muted mb-8">
        Contact us today for a free, no-obligation quote. We're happy to discuss your project.
      </p>
      <a
        href={phoneHref}
        class="inline-flex items-center gap-2 bg-cta hover:bg-cta-hover text-background font-semibold px-8 py-4 rounded-lg text-lg transition-all hover:scale-105"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
        </svg>
        <span>Call: {phone}</span>
      </a>
    </div>
  </section>
</Layout>
