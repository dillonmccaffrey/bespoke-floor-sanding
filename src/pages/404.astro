---
import Layout from '../layouts/Layout.astro';
import { getGeneralSettings, formatPhoneHref } from '../lib/content';

const settings = getGeneralSettings();
const phone = settings.phone;
const phoneHref = formatPhoneHref(phone);

const quickLinks = [
  { href: '/', label: 'Home', description: 'Back to homepage' },
  { href: '/services', label: 'Services', description: 'Our floor sanding services' },
  { href: '/gallery', label: 'Gallery', description: 'View our work' },
  { href: '/contact', label: 'Contact', description: 'Get in touch' },
];

const serviceAreas = [
  { href: '/floor-sanding-dublin', label: 'Dublin' },
  { href: '/floor-sanding-monaghan', label: 'Monaghan' },
  { href: '/floor-sanding-cavan', label: 'Cavan' },
  { href: '/floor-sanding-meath', label: 'Meath' },
  { href: '/floor-sanding-midlands', label: 'Midlands' },
];
---

<Layout
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Return to Bespoke Floor Sanding for premium floor sanding services in Ireland."
>
  <section class="min-h-[70vh] py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Error Message -->
      <div class="text-center mb-12">
        <h1 class="text-8xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-3xl font-bold text-text mb-4">Page Not Found</h2>
        <p class="text-text-muted text-lg max-w-md mx-auto">
          Sorry, the page you're looking for doesn't exist or has been moved.
        </p>
      </div>

      <!-- Quick Navigation -->
      <div class="mb-12">
        <h3 class="text-lg font-semibold text-text mb-4 text-center">Quick Links</h3>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
          {quickLinks.map((link) => (
            <a
              href={link.href}
              class="group bg-background-light hover:bg-background-lighter border border-background-lighter rounded-lg p-4 text-center transition-all hover:border-primary/50"
            >
              <span class="block font-semibold text-text group-hover:text-primary transition-colors">
                {link.label}
              </span>
              <span class="text-sm text-text-muted">{link.description}</span>
            </a>
          ))}
        </div>
      </div>

      <!-- Service Areas -->
      <div class="mb-12">
        <h3 class="text-lg font-semibold text-text mb-4 text-center">Service Areas</h3>
        <div class="flex flex-wrap justify-center gap-3">
          {serviceAreas.map((area) => (
            <a
              href={area.href}
              class="bg-background-light hover:bg-primary/10 border border-background-lighter hover:border-primary/30 rounded-full px-4 py-2 text-sm text-text-muted hover:text-primary transition-all"
            >
              Floor Sanding {area.label}
            </a>
          ))}
          <a
            href="/locations"
            class="bg-primary/10 border border-primary/30 rounded-full px-4 py-2 text-sm text-primary hover:bg-primary hover:text-background transition-all"
          >
            All Locations
          </a>
        </div>
      </div>

      <!-- CTA -->
      <div class="bg-background-light border border-background-lighter rounded-xl p-6 sm:p-8 text-center">
        <h3 class="text-xl font-bold text-text mb-2">Need Help Finding Something?</h3>
        <p class="text-text-muted mb-6">
          Contact us directly and we'll point you in the right direction.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 bg-primary text-background px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-all"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
            <span>Return Home</span>
          </a>
          <a
            href={phoneHref}
            class="inline-flex items-center justify-center gap-2 border border-primary text-primary px-6 py-3 rounded-lg font-semibold hover:bg-primary hover:text-background transition-all"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <span>Call: {phone}</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
